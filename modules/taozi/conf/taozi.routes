GET           /poi/nearby                                        controllers.taozi.POICtrl.getPoiNear(lng: Double, lat: Double, maxDist: Double?=2000, vs: Boolean?=false, hotel: Boolean?=false, restaurant: Boolean?=false,shopping: Boolean?=false, page: Int?=0, pageSize: Int?=10,commentPage: Int?=0, commentPageSize: Int?=10)

#----------攻略接口----------
#根据目的地获得攻略
POST          /create-guide                                      controllers.taozi.GuideCtrl.createGuide()
#复制攻略
GET           /copy-guide/:id                                    controllers.taozi.GuideCtrl.copyGuide(id: String)
#获得攻略列表
GET           /guides                                            controllers.taozi.GuideCtrl.getGuidesByUser(page:Int?=0,pageSize: Int?=20)
#更新行程单
POST          /guides                                            controllers.taozi.GuideCtrl.saveGuide()
#查看完整攻略详情
GET           /guides/:id                                        controllers.taozi.GuideCtrl.getGuideInfo(id: String, part: String="all")
