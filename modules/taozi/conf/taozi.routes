GET           /guides/:id/:part                                  controllers.taozi.GuideCtrl.getGuideInfo(id: String, part: String)
#获得目的地的攻略信息
GET           /guides/locality/:id/:part                         controllers.taozi.GuideCtrl.getLocalityGuideInfo(id:String,part: String)
#修改攻略标题
PUT           /guides/info/:id                                   controllers.taozi.GuideCtrl.setGuideTitle(id:String)
#删除攻略
DELETE        /guides/:id                                        controllers.taozi.GuideCtrl.deleteGuide(id: String)

